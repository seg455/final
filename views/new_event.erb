<h1>Create Event</h1>

<form action="/create_event" method="post">
  <div class="form-group">
    <label>Sport</label>
    <input type="text" class="form-control" placeholder="e.g. basketball" name="sport">
  </div>
    <div class="form-group">
    <label>Description</label>
    <input type="text" class="form-control" placeholder="e.g. up to you!" name="description">
  </div>
   <div class="form-group">
    <label>Date</label>
    <input type="text" class="form-control" placeholder="e.g. March Xth" name="date">
  </div>
   <div class="form-group">
    <label>Start Time</label>
    <input type="text" class="form-control" placeholder="e.g. X pm" name="time">
  </div>
   <div class="form-group">
    <label>Location</label>
    <input type="text" class="form-control" placeholder="e.g. SPAC" name="location">
  </div>
     <div class="form-group">
    <label>Exact Address</label>
    <input type="text" class="form-control" placeholder="e.g. 2311 Campus Dr, Evanston, IL 60208" name="address">
  </div>
   <div class="form-group">
    <label>Minimum Players Needed</label>
    <input type="text" class="form-control" placeholder="e.g. 8" name="min_players">
  </div>

  <button type="submit" class="btn btn-primary">Sign Up</button>
</form>

